<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="articleItem"
            type="com.moises.stocksbaraka.domain.modal.Article" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_image_height_small"
        android:padding="@dimen/dimens_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_news_image"
            android:layout_width="@dimen/news_image_width_small"
            android:layout_height="@dimen/news_image_height_small"
            android:contentDescription="@string/news_image_description"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:newsImage="@{articleItem.urlToImage}" />

        <FrameLayout
            android:layout_width="@dimen/news_image_width_small"
            android:layout_height="@dimen/news_image_height_small"
            android:background="@drawable/bg_news_informations"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_5"
            android:layout_marginEnd="@dimen/dimens_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{articleItem.publishedAt.toLocaleString()}"
            android:textAlignment="textStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_11"
            app:layout_constraintBottom_toTopOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_5"
            android:layout_marginEnd="@dimen/dimens_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{articleItem.title}"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_5"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@{articleItem.description}"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>